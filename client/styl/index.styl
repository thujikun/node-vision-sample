body
  text-align center
  font-family "游ゴシック体", "Yu Gothic", YuGothic, sans-serif

h1
  margin 60px 0 80px
  font-size 40px

input[type=text]
  width 600px
  padding 6px
  font-size 20px
  border-radius 4px
  border 1px solid #ccc

button
  vertical-align bottom
  padding 10px 30px
  border none
  background-color rgb(63,81,181)
  color #fff
  box-shadow 0 2px 5px 0 rgba(0,0,0,.26)
  border-radius 4px
  font-size 14px
  font-weight normal

.vision-form
  margin-bottom 150px

.vision-container
  display flex
  max-width 1280px
  margin 0 auto

  .vision-image
    max-width 100%
    vertical-align bottom

  .vision-box
    flex 1
    padding 0 20px

  .vision-description
    text-align left

  .vision-info-block
    display inline-block
    vertical-align top
    width 49%

  .vision-info-title
    text-align center

  .vision-color-list > li
    float left
    margin 10px
    padding 0
    list-style none

  .vision-color
    width 40px
    height 40px
    border-radius 50%

  .vision-text-list
    float left
    margin 5px
    padding 0
    list-style none